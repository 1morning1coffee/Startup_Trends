= render :partial => "menu"

%div.jumbotron
	%div.container.show-view
	%h1= "Nazwa: #{@startup.name}"
	%h3= "Krótki opis: #{@startup.short_description}"
	%p=  "Opis: #{@startup.description}"
	%p=  "Adres: #{@startup.website_url}"
	%h3= "Kategoria: #{@startup.category}"
	%h4.description.center-block= @startup.description

	%h3= @startup.email

	= link_to "Powrót", '#', onclick: "window.history.back()", class: "nav_link"

	= form_for @startup do |f|
		= f.hidden_field :name
		= f.hidden_field :short_description
		= f.hidden_field :description
		= f.hidden_field :website_url
		= f.hidden_field :category_id
		= f.hidden_field :website_thumbnail_file_name 
		= f.hidden_field :website_thumbnail_content_type
		= f.hidden_field :website_thumbnail_file_size
		= f.hidden_field :website_thumbnail_updated_at
		= f.hidden_field :email

		= f.button :submit
